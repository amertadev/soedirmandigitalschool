---
import { SITE } from "@const"

interface Props {
  isDark?: boolean;
}

const { isDark = false } = Astro.props;
---

<a href="/" class={`flex gap-2 items-center ${isDark ? 'text-white' : 'text-hitam'}`}>
  <svg
    class="size-10 md:size-14"
  >
    <use href="/brand.svg#bird"></use>
  </svg>
  <div class="uppercase leading-tight">
    <div
      class={`-mb-[2px] font-display text-lg md:text-2xl tracking-widest`}
    >
      {SITE.TITLE}
    </div>
    <div
      class={`${isDark ? 'bg-white' : 'bg-hitam'} rounded-sm text-xs md:text-sm font-semibold tracking-wider w-fit px-1 py-[1px] md:px-2 md:py-1 ${isDark ? 'text-hitam' : 'text-white'}`}
    >
      {SITE.AUTHOR}
    </div>
  </div>
</a>